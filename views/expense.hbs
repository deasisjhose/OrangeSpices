<title>Expense</title>

<body id="page-top">
    <div id="wrapper">
        <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0 shadow">
            <div class="container-fluid d-flex flex-column p-0">
                <a class="navbar-brand d-flex justify-content-center align-items-center m-0" href="/expense#page-top">
                    <div class="sidebar-brand-icon"><img src="public/img/logo.png" width="75"></i></div>
                </a>
                <hr class="sidebar-divider my-0">
                <ul class="nav navbar-nav text-light" id="accordionSidebar">
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/POS"><i class="fa fa-fw fa-store mr-2"></i>Point of Sale</a></li>
                    {{#if isAdmin}}
                        <li class="nav-item" role="presentation"><a class="nav-link" href="/products"><i class="fa fa-fw fa-star mr-2"></i>Products</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="/supplies"><i class="fa fa-fw fa-archive mr-2"></i>Inventory</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="/procurement"><i class="fa fa-fw fa-shopping-basket mr-2"></i>Procurement</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" style="background-color: #c64327 !important; color: #ffffff !important;" href="/expense"><i class="fa fa-fw fa-calculator mr-2"></i>Expenses</a></li>                        
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/order_history"><i class="fa fa-fw fa-file-alt mr-2"></i>Reports</a></li>
                    {{/if}}
                </ul>
            </div>
        </nav>
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
                    <div class="title"><span class="text-primary m-0 font-weight-bold">Expenses</span></div>
                    <a href="/expense/add"><div class="add"><button type="button" class="btn btn-primary btn-sm add-btn">+ Add</button></a>
                    </div>
            </nav>
            <div class="container-fluid" style="margin-left: 225px;width: 82%;">
                <div class="col-12">
                    {{>messages}}
                    <div class="card shadow mb-3">
                        {{#each expense}}
                            <button class="btn collapsible" type="button" data-toggle="collapse" data-target="content" aria-expanded="false" aria-controls="content"> Expense Month: {{format_Date expenseMonth}}</button>
                            <div class="content">
                                <table class="table table-hover text-center">
                                    <thead style="font-size: 13px;">
                                      <tr>
                                        <th scope="col">Expense Date</th>
                                        <th scope="col">Expense Name</th>
                                        <th scope="col">Expense Type</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Amount</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                        {{#each expenseDetails}}
                                            <tr>
                                                <td>{{formattingDate expenseDate}}</td>
                                                <td class="text-left">{{expenseName}}</td>
                                                <td>{{expenseType}}</td>
                                                <td class="text-left">{{description}}</td>
                                                <td class="text-right">₱{{addZeroes expenseAmount}}</td>
                                            </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <footer class="bg-white sticky-footer">
            <div class="container my-auto">
                <div class="text-center my-auto copyright"><span>Copyright © Orange &amp; Spices 2021</span></div>
            </div>
        </footer>
    </div><a class="border rounded d-inline scroll-to-top" href="/expense#page-top"><i class="fas fa-angle-up"></i></a></div>
    <script src="/public/js/collapsibleExpense.js"></script>
</body>