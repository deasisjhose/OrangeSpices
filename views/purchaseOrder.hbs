<title>Purchase Order</title>

<body id="page-top">
    <div id="wrapper">
        <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0 shadow">
            <div class="container-fluid d-flex flex-column p-0">
                <a class="navbar-brand d-flex justify-content-center align-items-center m-0" href="/addProduct#page-top">
                    <div class="sidebar-brand-icon"><img src="public/img/logo.png" width="75"></i></div>
                </a>
                <hr class="sidebar-divider my-0">
                <ul class="nav navbar-nav text-light" id="accordionSidebar">
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/POS"><i class="fa fa-fw fa-store mr-2"></i>Point of Sale</a></li>
                    {{#if isAdmin}}
                        <li class="nav-item" role="presentation"><a class="nav-link" href="/products"><i class="fa fa-fw fa-star mr-2"></i>Products</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="/supplies"><i class="fa fa-fw fa-archive mr-2"></i>Inventory</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" 
                            style="background-color: #c64327 !important; color: #ffffff !important;" href="/procurement"><i class="fa fa-fw fa-shopping-basket mr-2"></i>Procurement</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="/expense"><i class="fa fa-fw fa-calculator mr-2"></i>Expenses</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="/order_history"><i class="fa fa-fw fa-file-alt mr-2"></i>Reports</a></li>
                    {{else}}
                        <li class="nav-item" role="presentation"><a class="nav-link" href="/supplies"><i class="fa fa-fw fa-archive mr-2"></i>Inventory</a></li>
                    {{/if}}
                </ul>
            </div>
        </nav>
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
                    <div class="title" style="width: 78%;"><span class="text-primary m-0 font-weight-bold">Purchase Order</span></div>
                    <form action="/purchase/order" method="POST">
                    <div class="buttons">
                        <button type="button" class="btn btn-primary btn-sm save-btn" style="height: 34px; width: 100px">Send Order</button>
                        <a href="/procurement"><button type="button" class="btn btn-primary btn-sm can-btn">Cancel</button></a>
                    </div>            
                </nav>
            <div class="container-fluid" style="margin-left: 225px;width: 82%;">
                {{>messages}}
                <div class="card shadow mb-3">  
                    <div class="form-container" style="padding: 20px;">
                        <div class="col-4">
                            <label for="supplierName" style="font-weight: bold;">Supplier Name</label>
                            <input type="text" class="form-control" placeholder="Enter supplier name..." id="supplierName" maxlength="80">
                            <p id="supplierNameError" class="error"></p>
                        </div>
                        <div class="col-4">
                            <label for="supplierEmail" style="font-weight: bold;">Supplier Email</label>
                            <input type="text" class="form-control" placeholder="Enter supplier email..." id="supplierEmail" maxlength="80">
                            <p id="supplierEmailError" class="error"></p>
                        </div>
                        <div class="col-12">
                            <p style="font-weight: bold;">Items</p>
                            <div class="table-responsive">  
                                <table class="table table-bordered" id="dynamic_field">
                                    <thead style="font-size: 17px;">
                                      <tr>
                                        <th scope="col" stlye="text-align: center;">Supply Name</th>
                                        <th scope="col" stlye="text-align: center;">No. of Items</th>
                                        <th scope="col" stlye="text-align: center;">Add or Remove</th>
                                      </tr>
                                    </thead>  
                                    <tr>
                                        <td>
                                            <div class="form-group">
                                                <select id="selectIng" class="form-control" style="width:215px;">
                                                    {{>supplyName}}
                                                </select>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-group">
                                                <label for="numItems" class="sr-only">No. of Items</label>
                                                <input type="number" class="form-control" style="width:130px; margin-right: 20px; margin-left: 20px; height: 40px;" placeholder="No. of Items" id="numItems" min="1">
                                            </div>
                                        </td>
                                        <td>
                                            <button style="margin-left: 25px; height: 40px;" type="button" id="addIngredient" class="btn btn-primary add-btn">+Add</button>
                                        </td>      
                                    </tr>
                                </table>  
                            </div>  
                        </div>                               
                    </div>
                </div>
            </div>
    </div>
        <footer class="bg-white sticky-footer">
            <div class="container my-auto">
                <div class="text-center my-auto copyright"><span>Copyright Â© Orange &amp; Spices 2020</span></div>
            </div>
        </footer>
    </div><a class="border rounded d-inline scroll-to-top" href="/purchaseOrder#page-top"><i class="fas fa-angle-up"></i></a></div>
<script src="/public/js/appendOrder.js"></script>
</body>