<title>Order History</title>

<body id="page-top">
    <div id="wrapper">
        <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0 shadow">
            <div class="container-fluid d-flex flex-column p-0">
                <a class="navbar-brand d-flex justify-content-center align-items-center m-0" href="/order_history#page-top">
                    <div class="sidebar-brand-icon"><img src="public/img/logo.png" width="75"></i></div>
                </a>
                <hr class="sidebar-divider my-0">
                <ul class="nav navbar-nav text-light" id="accordionSidebar">
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/POS"><i class="fa fa-fw fa-store mr-2"></i>Point of Sale</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/products"><i class="fa fa-fw fa-star mr-2"></i>Products</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/supplies"><i class="fa fa-fw fa-archive mr-2"></i>Inventory</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/procurement"><i class="fa fa-fw fa-shopping-basket mr-2"></i>Procurement</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/expenseDetails"><i class="fa fa-fw fa-calculator mr-2"></i>Expenses</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" 
                        style="background-color: #c64327 !important; color: #ffffff !important;" href="/order_history"><i class="fa fa-fw fa-file-alt mr-2"></i>Reports</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" 
                        style="background-color: #f47639 !important; color: #ffffff !important; padding-left: 50px !important; height: 36px !important;" href="/order_history">Order History</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" 
                        style="padding-left: 50px !important; height: 36px !important;" href="/sales_report">Sales Report</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" 
                        style="padding-left: 50px !important; height: 36px !important;" href="/inventory_report">Inventory Report</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" 
                        style="padding-left: 50px !important; height: 36px !important;" href="/purchase_report">Purchase Report</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" 
                        style="padding-left: 50px !important; height: 36px !important;" href="/profitability">Profitability Report</a></li>
                </ul>
            </div>
        </nav>
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <div class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
                    <div class="title"><span class="text-primary m-0 font-weight-bold">Order History</span></div>
                    <form action="/order_history/filter" method="GET" style="display: flex; flex-direction: row;">
                        <div class="mr-3 col-xs-4 font-weight-bold"><label for="ordfromDate" class="col-form-label">From</label></div>
                        <div class="col-xs-3 date-report"><input type="date" class="form-control" name="ordfromDate" id="fromDate"></div>
                        <div class="mr-3 ml-4 col-xs-4 font-weight-bold"><label for="ordToDate" class="col-form-label">To</label></div>
                        <div class="col-xs-3 date-report"><input type="date" class="form-control" name="ordToDate" id="toDate"></div>
                        <div><button type="submit" class="btn btn-primary btn-sm add-btn ml-3 generate">Generate</button></div>
                    </form>
                </div>
            </nav>
            <div class="container-fluid" style="margin-left: 225px;width: 82%;">
                <div class="col-12">
                    <div class="card shadow mb-3">
                        <div class="card-header py-3">
                            {{#if filterDate}}
                            <p class="text-primary m-0 font-weight-bold" id="reportTitle">Order History from {{formattingDate startDate}} to {{formattingDate endDate}}</p>
                            <p class="text-muted m-0" id="datetime">Date Generated: {{timestamp}}</p>
                            {{else}}
                            <p class="text-primary m-0 font-weight-bold" id="reportTitle">Order History</p>
                            {{/if}}
                        </div>
                        <table class="table text-center table-bordered">
                            <caption class="text-center font-weight-bold">*END OF REPORT*</caption>
                            {{#each orderList}}
                            <thead>
                            <tr class="border-left border-right"> 
                                <th scope="col" style="background-color: #c64327 !important; color: #ffffff !important; border-right: 2px solid #e3e6f0;">List ID</th>
                                <th class="font-weight-bold" colspan="3" style="background-color: #c64327 !important; color: #ffffff !important;">{{_id}}</th>
                            </tr>
                            </thead>
                            <tr>
                                <th scope="col" style="border-right: 2px solid #e3e6f0;">Product</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Price</th>
                                <th scope="col">Subtotal</th>
                            </tr>                                      
                            <tbody>
                                {{#each orders}}                                
                                <tr>
                                    <td class="text-left pl-4" style="border-right: 2px solid #e3e6f0;">{{productName}}<br></td>
                                    <td>{{orderQuantity}}</td>
                                    <td>₱ {{productPrice}}</td>
                                    <td style="text-align: right;">₱ {{subTotal}}</td>                                   
                                </tr>
                                {{/each}}
                                <thead style="border-top: 2px solid #e3e6f0; background-color: #f47639 !important; color: #ffffff !important;">
                                    <tr>
                                        <th scope="col" style="border-right: 2px solid #e3e6f0;">Total</th>
                                        <th colspan="3" class="font-weight-bold" style="text-align: right;">₱ {{totalAmount}}</th>
                                    </tr>    
                                </thead>
                            </tbody>
                            {{/each}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <footer class="bg-white sticky-footer">
            <div class="container my-auto">
                <div class="text-center my-auto copyright"><span>Copyright © Orange &amp; Spices 2020</span></div>
            </div>
        </footer>
    </div><a class="border rounded d-inline scroll-to-top" href="/order_history#page-top"><i class="fas fa-angle-up"></i></a></div>
</body>

