            <div class="container-fluid">
                {{>messages}}
                <div class="card shadow mb-3">  
                    <div class="form-container" style="padding: 20px;">
                        <div class="row">
                            <form action="/expense/add" method="POST">
                            <div class="col-4">
                                <label for="expenseName" style="font-weight: bold;">Name</label>
                                <input type="text" class="form-control" placeholder="Enter expense name..." name="expenseName" maxlength="35">
                                <p id="expenseNameError" class="error"></p>
                            </div>
                        </div>  
                        <div class="col-4">
                            <label for="expenseType" style="font-weight: bold;">Expense Type</label>
                            <select class="form-control" name="expenseType">
                                <option id="reg">Regular</option>
                                <option id="irreg">Irregular</option>
                            </select>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
