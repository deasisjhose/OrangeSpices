<title>Add Purchase</title>

<body id="page-top">
    <div id="wrapper">
        <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0 shadow">
            <div class="container-fluid d-flex flex-column p-0">
                <a class="navbar-brand d-flex justify-content-center align-items-center m-0" href="/addPurchase#page-top">
                    <div class="sidebar-brand-icon"><img src="public/img/logo.png" width="75"></i></div>
                </a>
                <hr class="sidebar-divider my-0">
                <ul class="nav navbar-nav text-light" id="accordionSidebar">
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/POS">Point of Sale</a></li>
                    {{#if isAdmin}}
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/products">Products</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/supplies">Inventory</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link"
                        style="background-color: #c64327 !important; color: #ffffff !important;" href="/procurement">Procurement</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/expenseDetails">Expenses</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/order_history">Reports</a></li>
                    {{else}}
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/supplies">Inventory</a></li>
                    {{/if}}
                </ul>
            </div>
        </nav>
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
                    <div class="title"><span class="text-primary m-0 font-weight-bold">Add Purchase</span></div>
                    <form action="/purchase/add" method="POST">
                    <div class="buttons">
                        <button type="submit" class="btn btn-primary btn-sm save-btn">Save</button>
                        <a href="/procurement"><button type="button" class="btn btn-primary btn-sm can-btn">Cancel</button></a>
                    </div>            
                </nav>    
            <div class="container-fluid">
                {{>messages}}
                <div class="card shadow mb-3">  
                    <div class="form-container" style="padding: 20px;">
                        <div class="col-4">
                            <label for="suppName" style="font-weight: bold;">Supply Name</label>
                            <select id="selectSupply" name="supplyName">
                                <option selected="true" disabled="disabled">Select supply</option>
                                {{>supplyName}}
                            </select>
                            <p id="purchNameError" class="error"></p>
                        </div>
                        <div class="col-4">
                            <label for="purchDate" style="font-weight: bold;">Purchase Date</label>
                            <input type="date" class="form-control" name="purchDate">
                            <p id="purchDateError" class="error"></p>
                        </div>
                        <div class="col-4">
                            <label for="expDate" style="font-weight: bold;">Expiry Date</label>
                            <input type="date" class="form-control" name="expDate">
                            <p id="expDateError" class="error"></p>
                        </div>
                        <div class="col-4">
                            <label for="numItems" style="font-weight: bold;">No. of Items</label>
                            <input type="number" class="form-control" placeholder="Enter number of items" name="numItems" min="1">
                            <p id="numItemsError" class="error"></p>
                        </div>
                        <div class="col-4">
                            <label for="purchPrice" style="font-weight: bold;">Price</label>
                            <input type="number" class="form-control" placeholder="Price per item" name="purchPrice" min="1" step="0.01">
                            <p id="purchPriceError" class="error"></p>
                        </div>
                        
                        </form>              
                    </div>
                </div>
            </div>
        </div>
        <footer class="bg-white sticky-footer">
            <div class="container my-auto">
                <div class="text-center my-auto copyright"><span>Copyright Â© Orange &amp; Spices 2020</span></div>
            </div>
        </footer>
    </div><a class="border rounded d-inline scroll-to-top" href="/addPurchase#page-top"><i class="fas fa-angle-up"></i></a></div>
</body>