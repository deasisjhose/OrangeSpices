                        <div class="card-header py-3">
                            <p class="text-primary m-0 font-weight-bold">Ala Carte</p>
                        </div>
                        <div class="card-body">
                            <div class="container text-center">
                                <div class="prod-row">
                                    {{#each alaCarte}}
                                        <div class="col-4">
                                            <button type="button" class="btn btn-primary btn-sm prod-btn">{{prodName}}</button>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="crm" class="col-6 divmenu">
