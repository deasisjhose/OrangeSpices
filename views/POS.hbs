                                  <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                  </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                      <td class="leftdiz">Breaded Porkchop</td>
                                      <td class="text-right pr-3">₱ 110.00</td>
                                    </tr>
                                </tbody>
