                        </div>
                        <div class="card-body">
                            <div class="container text-center">
                                <div class="prod-row">
                                    {{#each CRM}}
                                        <div class="col-4">
                                            <button type="button" class="btn btn-primary btn-sm prod-btn">{{prodName}}</button>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
