                {{>messages}}
                <div class="card shadow mb-3">  
                    <div class="form-container" style="padding: 20px;">
                        <div class="col-3">
                            <label for="ingredientName" style="font-weight: bold;">Ingredient</label>
                            <input type="text" class="form-control" placeholder="Ex: Powdered Milk" maxlength="35" id="ingredientName">
                            <p id="ingredientNameError" class="error"></p>
                        </div>
                        <div class="col-3">
                            <label for="unit" style="font-weight: bold;">Unit</label>
                            <select class="form-control" id="unit">
                                {{>units}}
                            </select>
                        </div>
                    </div>
                </div>
            </div>
