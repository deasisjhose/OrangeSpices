                    {{/if}}
                </ul>
            </div>
        </nav>
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
                    <div class="title"><span class="text-primary m-0 font-weight-bold">Add Ingredient</span></div>
                    <form action="/ingredients/add" method="POST">
                        <div class="buttons">
                            <button type="submit" class="btn btn-primary btn-sm add-btn">Save</button>
                            <a href="/ingredients"><button type="button" class="btn btn-primary btn-sm can-btn">Cancel</button></a>
                        </div>            
                </nav>    
            <div class="container-fluid">
                <div class="card shadow mb-3">  
                    <div class="form-container" style="padding: 20px;">
                        <div class="col-4">
                            <div class="messages2">{{> messages}}</div>
                            <label for="ingredientName" style="font-weight: bold;">Ingredient</label>
                            <input type="text" class="form-control" placeholder="Enter ingredient name..." maxlength="45" name="ingredientName">
                            <p id="ingredientNameError" class="error"></p>
                        </div>
                        <div class="col-2">
                            <label for="unit" style="font-weight: bold;">Unit</label>
                            <select class="form-control" name="unit">
                                <option id="unit">Select unit...</option>
                                {{>units}}
                            </select>
                        </div>
                        </form>                    
                    </div>
                </div>
            </div>
        </div>
        <footer class="bg-white sticky-footer">
            <div class="container my-auto">
                <div class="text-center my-auto copyright"><span>Copyright Â© Orange &amp; Spices 2020</span></div>
